<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="place" type="com.unbeaned.app.models.Review" />
    </data>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="3dp"
        tools:context=".navigation.ComposeActivity">


        <TextView
            android:id="@+id/tvPlaceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="25sp"
            tools:text="Place Name" />

        <ImageView
            android:id="@+id/ivStarRating"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvPlaceName"
            android:layout_marginStart="2dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/slider"
            app:srcCompat="@drawable/ic_star" />

        <TextView
            android:id="@+id/tvRatingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPlaceName"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="2dp"
            android:layout_toStartOf="@+id/ivStarRating"
            android:fontFamily="@font/roboto"
            android:text="Rating"
            android:textSize="20sp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/slider"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPlaceName"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:stepSize="0.25"
            android:valueFrom="0.0"
            android:valueTo="5.0" />

        <TextView
            android:id="@+id/tvReviewLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slider"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:text="Review"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvReviewLabel"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:inputType="textLongMessage|textMultiLine"
            tools:text="Tell us about your brew." />

        <TextureView
            android:id="@+id/textureView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/etReview"
            android:layout_marginTop="0dp" />

        <Button
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textureView"
            android:layout_marginTop="0dp"
            android:text="Take photo" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:text="Submit" />

    </RelativeLayout>
</layout>