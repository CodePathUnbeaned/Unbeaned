<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivSplashLoginLogo"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/ic_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="52dp"
            android:paddingRight="52dp"
            tools:context=".navigation.splash.LoginFragment">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUsernameLogin"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="@string/login_username_hint"
                    android:includeFontPadding="false"
                    android:inputType="textEmailAddress"
                    android:paddingStart="5dp"
                    android:paddingLeft="0dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/soft_grey"
                    app:backgroundTint="@android:color/transparent" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLoginPass"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="@string/login_password_hint"
                    android:inputType="textPassword"
                    android:paddingStart="5dp"
                    android:paddingLeft="0dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/soft_grey" />

            </com.google.android.material.textfield.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <Button
                    android:id="@+id/btnSplashLoginEnter"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:backgroundTint="@color/med_pink"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Login"
                    app:cornerRadius="10dp" />

                <Button
                    android:id="@+id/btnSplashLoginBack"
                    style="@style/Widget.App.OutlinedButton"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Back" />


            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</layout>