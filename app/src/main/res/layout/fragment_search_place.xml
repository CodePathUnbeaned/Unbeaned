<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/searchPlaceLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".navigation.SearchPlaceFragment">

        <EditText
            android:id="@+id/etSearchPlace"
            android:layout_width="272dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:hint="@string/search_hint"
            android:includeFontPadding="false"
            android:paddingStart="5dp"
            android:paddingLeft="0dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            android:paddingRight="0dp"
            android:paddingBottom="8dp"
            android:textColor="@color/soft_grey"
            app:backgroundTint="@android:color/transparent" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@+id/etSearchPlace"
            android:text="Search" />

        <Button
            android:id="@+id/btnCurrentLocation"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etSearchPlace"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/map_place_icn"
            android:paddingLeft="30dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:text="Current Location"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            app:icon="@drawable/map_place_icn"
            app:iconPadding="20dp" />

    </RelativeLayout>
</layout>