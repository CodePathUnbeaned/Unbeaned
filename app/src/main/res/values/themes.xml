<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Unbeaned" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!--        <item name="colorPrimary">@color/med_pink</item>-->
        <item name="colorPrimary">@color/pink_red_accent</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/med_pink</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputEditText.FilledBox
        </item>
    </style>

    <style name="Widget.App.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">@color/med_pink</item>
    </style>

    <style name="TextAppearance.App.Button" parent="Base.TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat_family</item>
        <item name="android:fontFamily">@font/montserrat_family</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/med_pink</item>
        <item name="colorOnPrimary">@color/soft_grey</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/med_pink</item>
        <item name="colorOnSurface">@color/soft_grey</item>
        <item name="colorError">@color/soft_maroon</item>
    </style>

    <style name="Theme.Unbeaned.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Unbeaned.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Unbeaned.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>